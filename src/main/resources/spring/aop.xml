<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

  <bean id="helloWorldImpl1" class="com.dxh.practice.web.HelloWorldImpl1"/>
  <bean id="helloWorldImpl2" class="com.dxh.practice.web.HelloWorldImpl2"/>
  <bean id="timeHandler" class="com.dxh.practice.web.TimeHandler"/>
  <bean id="logHandler" class="com.dxh.practice.web.LogHandler"/>


  <!--execution：第一个 * 表示返回值的任意类型，其次是aop所切的包名，-->
  <!--包名后的 .. 代表当前包及其子包-->
  <!--第二个 * 代表类名，即所有类  -->
  <!--.*(..) 代表任何方法名（任何参数）-->
  <aop:config>
    <aop:aspect id="time" ref="timeHandler" order="1">
      <!--切入点-->
      <aop:pointcut id="addTime" expression="execution(* com.dxh.practice.web.HelloWorld.*(..))"/>
      <!--<aop:before method="printTime" pointcut-ref="addTime"/>-->
      <!--<aop:after method="printTime" pointcut-ref="addTime"/>-->
      <!--<aop:after-returning method="printTime" pointcut-ref="addTime"/>-->
      <!--<aop:after-throwing method="printTime" pointcut-ref="addTime"/>-->
      <aop:around method="printTime" pointcut-ref="addTime"/>
    </aop:aspect>
    <aop:aspect id="log" ref="logHandler" order="2">
    <aop:pointcut id="printLog" expression="execution(* com.dxh.practice.web.HelloWorld.*(..))"/>
    <!--<aop:before method="LogBefore" pointcut-ref="printLog"/>-->
    <aop:after method="LogAfter" pointcut-ref="printLog"/>
    </aop:aspect>
  </aop:config>
</beans>